{
  "name": "firebase-steam-login",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copy-static-assets.js"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/body-parser": "^1.16.4",
    "@types/compression": "^0.0.33",
    "@types/dotenv": "^4.0.0",
    "@types/errorhandler": "^0.0.30",
    "@types/express": "^4.0.36",
    "@types/express-validator": "^3.0.0",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.6",
    "@types/passport": "^0.3.3",
    "concurrently": "^3.5.0",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.8",
    "tslint": "^5.4.3",
    "typescript": "^2.4.1"
  },
  "dependencies": {
    "async": "^2.5.0",
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.15.3",
    "express-validator": "^3.2.0",
    "firebase-admin": "^5.0.0",
    "morgan": "^1.8.2",
    "passport": "^0.3.2",
    "passport-steam": "^1.0.8"
  }
}
